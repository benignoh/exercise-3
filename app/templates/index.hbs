<h3 class="text-center">Cinepolis web reservation</h3>

<p class="text-center">
  Click the button to see the list of available movies
</p>

<div class="row">
  <div class="col-sm-10 col-sm-offset-2">
    {{#each model as |user|}}
      <div class="col-md-3 text-center">
        <button type="button" {{action 'enter' user}} class="btn btn-primary">
          Enter as: {{if user.name user.name 'User not defined correctly'}}
        </button>
        {{#if user.tickets}}
          <br/>
          <small>{{user.tickets.length}} tickets purchased</small>
        {{/if}}
      </div>
    {{/each}}
  </div>
</div>
