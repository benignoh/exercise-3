<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    {{#each model as |movie|}}
      <div class="col-sm-4">
        <h5>
          {{if movie.name movie.name 'Name no defined correctly'}}
          <small>{{if movie.year movie.year 'Year not defined correctly'}}</small>
        </h5>

        <p>
          <small>{{if movie.synopsis movie.synopsis 'synopsis not defined correctly'}}</small>
        </p>

        <p class="text-center">
          {{#link-to 'movie' movie.id class='btn btn-default'}}
            See schedules
          {{/link-to}}
        </p>
      </div>
    {{/each}}
  </div>
</div>
